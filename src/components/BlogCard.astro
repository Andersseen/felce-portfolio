---
interface Props {
  title: string;
  date: string;
  excerpt: string;
  image: string;
}

const { title, date, excerpt, image } = Astro.props;
---

<article class="group relative bg-white rounded-xl shadow-lg overflow-hidden transform transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl">
  <div class="relative h-48 overflow-hidden">
    <img 
      src={image} 
      alt={title}
      class="w-full h-full object-cover transform transition-transform duration-500 group-hover:scale-110"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  </div>
  <div class="p-6">
    <time class="text-sm text-gray-500">{date}</time>
    <h3 class="mt-2 text-xl font-bold text-gray-900 group-hover:text-[#835eff] transition-colors duration-300">
      {title}
    </h3>
    <p class="mt-3 text-gray-600 line-clamp-3">
      {excerpt}
    </p>
    <div class="mt-4">
      <span class="inline-flex items-center text-[#ff008d] font-medium">
        Read more
        <svg class="w-4 h-4 ml-2 transform transition-transform duration-300 group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </span>
    </div>
  </div>
</article>